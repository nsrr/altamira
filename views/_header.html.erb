<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= env["SCRIPT_NAME"] %>">Altamira</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="disabled"><a href="#"><%= File.basename(@edf.filename) if @edf %></a></li>

        <li class="<%= 'disabled' if @page == 1 %>"><a href="?page=<%= [@page - 1, 1].max %>&window=<%= @samples_per_page %>" id="retreat">&larr; Retreat</a></li>
        <li class="<%= 'disabled' if @page == @max_page %>"><a href="?page=<%= [@page + 1, @max_page].min %>&window=<%= @samples_per_page %>" id="advance">Advance &rarr;</a></li>

        <% left_window = @page * 100.0 / @max_page %>
        <% center_window = (100.0 / @max_page + 2.0).ceil %>
        <% right_window = 100.0 - left_window - center_window %>

        <div class="progress" style="width:200px;margin:15px">
          <div class="progress-bar" style="width: <%= left_window %>%;background-color:#777;">
          </div>
          <div class="progress-bar" style="width: <%= center_window %>%;background-color:#FFF;color:#333">
          </div>
          <div class="progress-bar" style="width: <%= right_window %>%;background-color:#777;">
          </div>
        </div>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="disabled"><a href="#">Samples Per Page</a></li>
        <% [15,30,60].each do |window| %>
          <li><a href="?page=<%= @page %>&window=<%= window %>" class="btn <%= 'active' if @samples_per_page == window %>"><%= window %></a></li>
        <% end %>
      </ul>


    </div><!--/.nav-collapse -->
  </div>
</div>
